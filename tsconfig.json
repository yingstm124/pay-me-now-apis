{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist"
    },
    "lib": ["es2015"],
    "baseUrl": "src",
    "paths": {
      "@alias/*": [ "path/to/alias/*" ]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
    "outDir": "./out",
    "rootDir": "./src"
  }